<odoo>

    <template id="report_tax_invoice_abb_acm_document_with_payments" inherit_id="acm.report_receipt_acm_document_with_payments" primary="True">
        <xpath expr="//div/h5/div/span[2]/span" position="replace">
            <span>ใบกำกับภาษีอย่างย่อ</span>
        </xpath>
    </template>

    <template id="report_tax_invoice_abb_acm">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="ncopies" t-value="2"/>
                <t t-foreach="range(ncopies)" t-as="page">
                    <t t-set="lang" t-value="o.env.user.lang"/>
                    <t t-call="acm.report_tax_invoice_abb_acm_document_with_payments" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>

</odoo>
